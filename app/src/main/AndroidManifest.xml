<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mahe.mypaint">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icons_design"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icons_design"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="HomePage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateDoodle"
            android:label="Create"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditDoodle"
            android:label="DrawOnImage"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            />
        <activity android:name=".DrawOnImage"
            android:label="DrawOnImage"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        </activity>
    </application>

</manifest>