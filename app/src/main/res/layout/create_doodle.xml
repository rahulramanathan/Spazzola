<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/r1"
    tools:context="com.example.mahe.mypaint.CreateDoodle">

    <com.example.mahe.mypaint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="101dp"
        android:onClick="plusClick"
        android:src="@drawable/ic_add_circle_black_24dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginEnd="36dp"
        android:onClick="minusClick"
        android:src="@drawable/ic_do_not_disturb_on_black_24dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginStart="22dp"
        android:onClick="lineColorClick"
        android:src="@drawable/ic_edit_black_24dp"
        android:id="@+id/imageButton2" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginStart="98dp"
        android:onClick="backColorClick"
        android:src="@drawable/ic_colorize_black_24dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:onClick="undoClick"
        android:src="@drawable/ic_undo_black_24dp" />
</RelativeLayout>
